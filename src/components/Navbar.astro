---
const navLinks = [
  // { label: 'For Businesses', href: '#businesses' },
  // { label: 'For Universities', href: '#universities' },
  // { label: 'Workshops', href: '#workshops' },
  { label: 'Apply To Teach', href: '/teach' },
  { label: 'Contact Us', href: '/contact' }
];
---

<!-- ===== NAVBAR ===== -->
<nav class="relative z-30 flex justify-center px-4 pt-2">
  <div id="nav-container" class="bg-white rounded-full shadow-lg max-w-4xl w-full">
    <!-- Top bar -->
    <div class="flex items-center gap-8 px-6 py-2.5">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 shrink-0">
        <img
          src="/universityx.svg"
          alt="UniversityX Logo"
          class="h-10 w-auto"
          loading="eager"
          fetchpriority="high"
        />
      </a>

      <!-- Desktop links -->
      <div class="hidden md:flex items-center gap-6 flex-1 justify-end">
        {navLinks.map((link) => (
          <a href={link.href} class="text-gray-600 hover:text-black text-md font-medium transition-colors">
            {link.label}
          </a>
        ))}
      </div>

      <!-- Hamburger toggle (mobile only) -->
      <button
        id="menu-toggle"
        type="button"
        class="md:hidden ml-auto flex items-center justify-center w-10 h-10 cursor-pointer"
        aria-label="Toggle menu"
        aria-expanded="false"
      >
        <!-- Hamburger icon -->
        <svg id="icon-hamburger" class="w-6 h-6 text-[#1A0533]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <line x1="3" y1="6" x2="21" y2="6" />
          <line x1="3" y1="12" x2="21" y2="12" />
          <line x1="3" y1="18" x2="21" y2="18" />
        </svg>
        <!-- Close icon -->
        <svg id="icon-close" class="w-6 h-6 text-[#1A0533] hidden" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <line x1="18" y1="6" x2="6" y2="18" />
          <line x1="6" y1="6" x2="18" y2="18" />
        </svg>
      </button>
    </div>

    <!-- Mobile menu (grid 0frâ†’1fr animation) -->
    <div id="mobile-menu" class="mobile-menu md:!hidden">
      <div class="mobile-menu-inner">
        <div class="px-6 pb-6 pt-3 border-t border-gray-100">
          <div class="flex flex-col gap-1">
            {navLinks.map((link) => (
              <a
                href={link.href}
                class="mobile-nav-link block text-[#1A0533] text-lg font-semibold py-3 border-b border-gray-100 last:border-b-0 transition-colors hover:text-[#BB39B4]"
              >
                {link.label}
              </a>
            ))}
          </div>
          <a
            href="#enroll"
            class="mobile-nav-link inline-flex items-center justify-center gap-2 bg-[#BB39B4] text-white font-semibold px-8 py-3.5 rounded-full transition-colors text-base mt-6 w-full sm:w-auto hover:bg-[#a832a1]"
          >
            Browse Courses
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</nav>

<style>
  /* Mobile menu: grid row animation (same pattern as FAQ accordion) */
  .mobile-menu {
    display: grid;
    grid-template-rows: 0fr;
    transition: grid-template-rows 300ms ease;
  }

  .mobile-menu-inner {
    overflow: hidden;
  }

  .mobile-menu.is-open {
    grid-template-rows: 1fr;
  }
</style>

<script>
  function initMobileMenu() {
    const toggle = document.getElementById('menu-toggle')!;
    const menu = document.getElementById('mobile-menu')!;
    const container = document.getElementById('nav-container')!;
    const iconHamburger = document.getElementById('icon-hamburger')!;
    const iconClose = document.getElementById('icon-close')!;

    function openMenu() {
      menu.classList.add('is-open');
      iconHamburger.classList.add('hidden');
      iconClose.classList.remove('hidden');
      container.classList.remove('rounded-full');
      container.classList.add('rounded-3xl');
      toggle.setAttribute('aria-expanded', 'true');
    }

    function closeMenu() {
      menu.classList.remove('is-open');
      iconHamburger.classList.remove('hidden');
      iconClose.classList.add('hidden');
      toggle.setAttribute('aria-expanded', 'false');
      // Wait for the grid slide animation (300ms) to finish before snapping to pill
      setTimeout(() => {
        container.classList.remove('rounded-3xl');
        container.classList.add('rounded-full');
      }, 300);
    }

    toggle.addEventListener('click', () => {
      const isOpen = menu.classList.contains('is-open');
      if (isOpen) {
        closeMenu();
      } else {
        openMenu();
      }
    });

    // Close menu when a mobile nav link is clicked
    menu.querySelectorAll('.mobile-nav-link').forEach((link) => {
      link.addEventListener('click', closeMenu);
    });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initMobileMenu);
  } else {
    initMobileMenu();
  }
</script>
